{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
		"paths": {
			"@api/*": ["api/*"],
			"@database/*": ["database/*"],
			"@entities/*": ["entities/*"],
			"@shared/*": ["shared/*"],
			"@interfaces/*": ["interfaces/*"],
			"@utils/*": ["utils/*"]
    }
	}
}

